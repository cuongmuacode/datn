<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.baocao.FragmentBaoCaoTongHop">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/ic_textview_bg_2"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:text="Báo cáo"
        android:textSize="20sp" />

        <TextView
            android:id="@+id/baocaotonghop_khachhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="Báo cáo khách mua hàng"
            android:textSize="17sp"
            android:clickable="true"
            android:background="@drawable/bg_textview"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:focusable="true" />
    <TextView
        android:id="@+id/baocaotonghop_tonkho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="Báo cáo tồn kho"
        android:textSize="17sp"
        android:clickable="true"
        android:paddingStart="25dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:background="@drawable/bg_textview"
        android:focusable="true" />

    <TextView
        android:id="@+id/baocaotonghop_congno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:text="Báo cáo công nợ"
        android:background="@drawable/bg_textview"
        android:textSize="17sp"
        android:clickable="true"
        android:paddingStart="25dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:focusable="true" />
        <TextView
            android:id="@+id/baocaotonghop_doanhthu_loinhuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="Báo cáo chi tiết doanh thu lợi nhuận"
            android:textSize="17sp"
            android:clickable="true"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:background="@drawable/bg_textview"
            android:focusable="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:background="@drawable/ic_textview_bg_2"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:text="Thống kê"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/thongketonghop_sanphambanchay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="Thống kê 10 sản phẩm bán chạy nhất"
            android:background="@drawable/bg_textview"
            android:textSize="17sp"
            android:clickable="true"
            android:paddingStart="25dp"
            android:paddingEnd="15dp"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>