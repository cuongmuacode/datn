<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.nhanvien.FragmentRegister">
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_add_avt"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_add_24"
                android:contentDescription="@string/icon" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDoiMatKhau"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:focusable="true"
                android:fitsSystemWindows="true"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                />
        </RelativeLayout>


        <EditText
            android:id="@+id/password_cu_doimatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
          android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="12dp"
            android:hint="Mật khẩu cũ"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:minWidth="320dp"
            android:minHeight="60dp" />


        <EditText
            android:id="@+id/password_moi_doimatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="12dp"
            android:hint="Mật khẩu mới"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:minWidth="320dp"
            android:minHeight="60dp" />


        <EditText
            android:id="@+id/confirm_password_doimatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
             android:drawablePadding="12dp"
            android:hint="@string/hint_confirm_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:minWidth="320dp"
            android:minHeight="60dp" />
        <Button
            android:id="@+id/button_doimatkhau"
            android:layout_width="342dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Send" />

    </LinearLayout>
</ScrollView>