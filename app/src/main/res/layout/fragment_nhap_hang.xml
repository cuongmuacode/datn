<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"

    tools:context=".fragment.hoadonnhap.FragmentNhapHang">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/addSoHoaDonNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số hóa đơn : "
            android:textSize="17sp"
            android:layout_marginBottom="1dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_textview"
            />
        <TextView
            android:id="@+id/tenNhanVienHoaDonNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="Nhân viên : "
            android:textSize="17sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/bg_textview"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_textview"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/linearchonkhachhang"
            >
            <TextView
                android:id="@+id/tenkhachhang_hoadonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chọn Khách hàng : "
                android:textSize="17sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_weight="1"
                android:gravity="clip_vertical" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:contentDescription="@string/icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_textview"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/linearchonSanPham"
            >
            <TextView
                android:id="@+id/tenSanPham_hoadonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chọn Sản phẩm : "
                android:textSize="17sp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_weight="1"
                android:gravity="clip_vertical" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:contentDescription="@string/icon"
                 />
        </LinearLayout>

        <EditText
            android:id="@+id/inputedittext_GiaBan"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:textSize="17sp"
            android:maxLength="8"
            android:minHeight="60dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:hint="Giá sản phẩm bán"
            android:layout_height="wrap_content"
            android:autofillHints="@string/icon" />

        <EditText
            android:id="@+id/inputedittext_GiaNhap"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:textSize="17sp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:maxLength="8"
            android:minHeight="60dp"
            android:hint="Giá sản phẩm nhập"
            android:layout_height="wrap_content"
            android:autofillHints="@string/icon" />
        <EditText
            android:id="@+id/inputedittext_SoLuongHoaDonNhap"
            android:layout_width="match_parent"
            android:background="@drawable/bg_edittext"
            android:inputType="number"
            android:textSize="17sp"
            android:maxLength="5"
            android:minHeight="60dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:hint="Số lượng sản phẩm"
            android:layout_height="wrap_content"
            android:autofillHints="@string/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <Button
                android:id="@+id/buttonaddHoaDonNhap"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:text="Lưu hóa đơn" />
            <Button
                android:id="@+id/hoadonNhap_donhangnhap_no"
                android:layout_width="match_parent"
                android:text="@string/addhoadon_luuhoadon_no"
                android:layout_marginStart="3dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>