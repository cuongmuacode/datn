<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.sanpham.Fragment_ChiTietSanPham">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Chi tiết sản phẩm"
            android:background="@drawable/bg_textview"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/chitietSanPham_Image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_shopping_bag_24" />
        <TextView
            android:id="@+id/chitietSanPham_TenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"

            android:background="@drawable/bg_edittext"
            android:text="Tên sản phẩm : Táo"
            />
        <TextView
            android:id="@+id/chitietSanPhamThongTin"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:text="thông tin"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chitietSanPhamMota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:text="Chi tiết sản phẩm"
            android:textSize="17sp"
            android:minHeight="150dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="0dp"
            android:gravity="top"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_sua_chitietsp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Sửa"
                />
            <Button
                android:id="@+id/btn_xoa_chitietsp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Xóa"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>