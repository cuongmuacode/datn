<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgHoaDonNhap"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_baseline_insert_drive_file_24"
        android:contentDescription="@string/icon" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/idHoaDonNhap"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:textSize="17sp"
            android:text="" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hoaDonNhapKhachhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="jajfsdkljafdasdfasdfjasjfkasdfjkaskfjasfdkljasfdlakjsfdlsakjalsdjkfasljkfasldjkfaslfjkđalkjfdslạk" />
            <TextView
                android:id="@+id/ngayHoadonNhap"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:text="30/02/20002"
                />
            <ImageView
                android:id="@+id/imgMoreHoaDonNhap"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/productGiahoadonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="jajfsdkljafdasdfasdfjasjfkasdfjkaskfjasfdkljasfdlakjsfdlsakjalsdjkfasljkfasldjkfaslfjkđalkjfdslạk" />
            <TextView
                android:id="@+id/productGiahoadonNoNhap"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/red"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/button_thanhtoan_hoadonNhap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thanh toán"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/button_xoa_hoadonNhap"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Xóa" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>