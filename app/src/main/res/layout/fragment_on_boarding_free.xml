<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.manhinh.FragmentOnBoardingEasy">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/smarketing"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Quản lý bán hàng"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Quản lý bán hàng tại cửa hàng thông qua App, tinh tiền, in hóa đơn nhanh chóng, quản lý đơn hàng, theo dõi báo cáo bán hàng mọi lúc."
        />
</LinearLayout>