<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityy.ActivityOnBoardingScreen">
    <TextView
        android:id="@+id/textSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20sp"
        android:text="@string/obs_skip"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:layout_alignParentEnd="true"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpagerOnBoarding"
        android:layout_width="match_parent"
        android:layout_below="@+id/textSkip"
        android:layout_above="@+id/hi"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:id="@+id/hi"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circleOnBoarding"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            app:ci_drawable="@drawable/bg_circle_blue"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/obs_next"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</RelativeLayout>