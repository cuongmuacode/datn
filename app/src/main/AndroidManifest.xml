<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datn.quanlybanhang">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"

        />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/shopcolordiff"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shopcolordiff"
        android:supportsRtl="true"
        android:theme="@style/Theme.Banhang">

        <activity android:name=".activityy.ActivityOnBoardingScreen"
            />
        <activity android:name=".activityy.ActivityLoginn"
            android:screenOrientation="portrait"
            />

        <activity
            android:name=".activityy.ActivityThongTin"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".activityy.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreen"

            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activityy.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            />

    </application>

</manifest>